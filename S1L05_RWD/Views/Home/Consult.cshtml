
@{
    ViewBag.Title = "Consult";
}

<h2>Book a consultation with your Lecturer.</h2>
<br/><br/>
<h3>Your details</h3>

<form action="~/HTML/Submission.html">
    <!--Name and Surname side by side-->
    <div class="row">
        <div class="col">
            <label for="name" class="form-label">First Name:</label>
            <input type="text" class="form-control" placeholder="John" name="name" required>
        </div>
        <div class="col">
            <label for="surname" class="form-label">Last Name:</label>
            <input type="text" class="form-control" placeholder="Doe" name="surname" required>
        </div>
    </div>
    <!--Email below name and surname-->
    <div class="mb-3 mt-3">
        <label for="email" class="form-label">Email:</label>
        <input type="email" class="form-control" id="email" placeholder="test@gmail.com" name="email">
    </div>
    <!--Comment section-->
    <label for="comment">Comments:</label>
<textarea class="form-control" rows="5" id="comment" name="text" placeholder="blah blah blah" required></textarea>
    <!--Submit button-->
    <br/>
    <button type="submit" class="btn btn-success">Submit</button>
</form>
